<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:id="@+id/button_workout"
        android:text="@string/button_1"
        android:textColor="#EDDAEB"
        android:textSize="20sp"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:background="@drawable/buttonshape2"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="120dp"
        android:layout_marginStart="120dp" />

    <Button
        android:id="@+id/button_videos"
        android:text="@string/button_2"
        android:textColor="#EDDAEB"
        android:textSize="20sp"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:background="@drawable/buttonshape2"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:layout_alignLeft="@+id/button_graphs"
        android:layout_alignStart="@+id/button_graphs" />" />

    <Button
        android:id="@+id/button_tracker"
        android:text="@string/button_3"
        android:textColor="#EDDAEB"
        android:textSize="20sp"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:background="@drawable/buttonshape2"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_alignTop="@+id/button_graphs"
        android:layout_alignLeft="@+id/button_workout"
        android:layout_alignStart="@+id/button_workout" />

    <Button
        android:id="@+id/button_graphs"
        android:text="@string/button_4"
        android:textColor="#EDDAEB"
        android:textSize="20sp"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:background="@drawable/buttonshape2"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/button_workout"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="105dp"
        android:layout_marginEnd="105dp" />

    <Button
        android:id="@+id/button_settings"
        android:text="@string/button_5"
        android:textColor="#EDDAEB"
        android:textSize="20sp"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape2"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/button_graphs"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
</ScrollView>