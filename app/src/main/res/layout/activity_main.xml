<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:id="@+id/button_workout"
        android:text="@string/button_1"
        android:textColor="#EDDAEB"
        android:textSize="20sp"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:background="@drawable/buttonshape2"
        android:shadowColor="#A8A8A8"
        android:onClick="workout"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="77dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/button_tracker"
        android:layout_alignStart="@+id/button_tracker" />

    <Button
        android:id="@+id/button_videos"
        android:text="@string/button_2"
        android:textColor="#EDDAEB"
        android:textSize="20sp"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:background="@drawable/buttonshape2"
        android:shadowColor="#A8A8A8"
        android:onClick="video"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_above="@+id/button_tracker"
        android:layout_alignRight="@+id/button_settings"
        android:layout_alignEnd="@+id/button_settings" />

    <Button
        android:id="@+id/button_tracker"
        android:text="@string/button_3"
        android:textColor="#EDDAEB"
        android:textSize="20sp"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:background="@drawable/buttonshape2"
        android:shadowColor="#A8A8A8"
        android:layout_marginLeft="40dp"
        android:onClick="nutrition"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/button_workout"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/button_graphs"
        android:text="@string/button_4"
        android:textColor="#EDDAEB"
        android:textSize="20sp"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:background="@drawable/buttonshape2"
        android:shadowColor="#A8A8A8"
        android:onClick="graphs"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_above="@+id/button_settings"
        android:layout_alignRight="@+id/button_settings"
        android:layout_alignEnd="@+id/button_settings" />

    <Button
        android:id="@+id/button_settings"
        android:text="@string/button_5"
        android:textColor="#EDDAEB"
        android:textSize="20sp"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape2"
        android:shadowColor="#A8A8A8"
        android:onClick="settings"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/button_tracker"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
</ScrollView>