<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>
    <!-- Main Menu theme. -->
    <style name="MainMenuTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:windowBackground">@drawable/background_3</item>
    <item name="android:textStyle">bold</item>
    </style>
    <!-- Muscle Skeleton theme. -->
    <style name="MuscleSkeleton" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:windowBackground">@drawable/background_2</item>
    <item name="android:textStyle">bold</item>
    </style>
    <!-- Workout Button theme. -->
    <style name="actionBarButton">
        <item name="android:background">@drawable/pressed_or_not</item>
    </style>
    <!-- Workout Button Style. -->
    <style name="WorkoutEditButtonStyle" parent="@android:style/Widget.Button.Small">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/button_workoutedit</item>
    </style>
    <!-- Workout Button Style. -->
    <style name="WorkoutEditButtonStyle_complementary" parent="WorkoutEditButtonStyle">
        <item name="android:background">@drawable/button_workoutedit_complementary</item>
    </style>
    <!-- Workout Edit Button Style. -->
    <style name="WorkoutEditTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/textview_workoutedit</item>
    </style>

</resources>
